#!/bin/bash
set -e
set -o pipefail

image=$1
if [ -z "$image" ]; then
  echo >&2 "Usage: crun [image] [command]"
  exit 1
fi
shift

MONGODB_URL="${MONGODB_URL-mongodb://mongohost/duelo_test}"

if ! hash docker 2> /dev/null; then
  set -a
  PATH="$PATH:./node_modules/.bin/"
  $@
  exit
fi

if ! docker inspect --format="{{.Id}}" $image > /dev/null; then
  echo "Pulling $image image..."
  docker pull $image
fi

if [ -f ".mongohost.ip" ]; then
  MONGOHOST_IP=$(cat .mongohost.ip)
  EXTRA_HOST="--add-host='mongohost:$MONGOHOST_IP'"
fi

BASH_PATH=$(dirname "${BASH_SOURCE[0]}")
if hash realpath 2> /dev/null; then
  REPO_ROOT=$(realpath "${BASH_PATH}/../")
else
  REPO_ROOT=$(readlink -f "${BASH_PATH}/../")
fi
CONTAINER_HOME=$REPO_ROOT
STANDARD_PATH="/usr/local/sbin:/usr/local/bin:/usr/sbin:/usr/bin:/sbin:/bin"

DOCKER_OPTS="--rm"
if [ "$NO_DOCKER_RM" ]; then
  DOCKER_OPTS=""
fi

set -x
docker run -v $REPO_ROOT:$CONTAINER_HOME -v /tmp:/tmp -v /var/run/docker.sock:/var/run/docker.sock \
  -e HOME=$CONTAINER_HOME \
  -w $CONTAINER_HOME \
  -e PATH="$STANDARD_PATH:./node_modules/.bin/" \
  -e MONGODB_URL="$MONGODB_URL" \
  $CRUN_OPTS $EXTRA_HOST $DOCKER_OPTS -ti --sig-proxy=true $image "$@"
